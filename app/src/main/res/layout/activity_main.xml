<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:src="@mipmap/ic_launcher"
        android:layout_marginLeft="150dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_gravity="left|center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtview1"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="Năm dương lịch:"
            android:textSize="20dp"
            />

        <EditText
            android:id="@+id/edtduonglich"
            android:layout_width="220dp"
            android:layout_height="48dp"

            android:inputType="number"
            android:textSize="18dp"
            tools:text="Nhập số" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            style="@style/Widget.AppCompat.Button"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="CHUYỂN"
            android:id="@+id/BtnChuyen" />
        <Button
            style="@style/Widget.AppCompat.Button"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="TIẾP"
            android:id="@+id/BtnTiep" />
        <Button
            style="@style/Widget.AppCompat.Button"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="THOÁT"
            android:id="@+id/BtnThoat" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_gravity="left|center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtamlich"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="Năm âm lịch:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edtnamamlich"
            android:layout_width="255dp"
            android:layout_height="48dp"
            android:inputType="number"
            android:textSize="18dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_gravity="left|center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtmenh"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="Mệnh:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/etMenh"
            android:layout_width="255dp"
            android:layout_height="48dp"
            android:inputType="number"
            android:textSize="18dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_gravity="left|center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtnhuan"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="Năm nhuận:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/etNhuan"
            android:layout_width="255dp"
            android:layout_height="48dp"
            android:inputType="number"
            android:textSize="18dp" />
    </LinearLayout>
</LinearLayout>